name:                backprop
version:             0.1.0.0
-- synopsis:
-- description:
homepage:            https://github.com/mstksg/backprop#readme
license:             BSD3
license-file:        LICENSE
author:              Justin Le
maintainer:          justin@jle.im
copyright:           (c) Justin Le 2016
category:            Web
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Numeric.Backprop
                       Numeric.Backprop.Op
                       Numeric.Backprop.Implicit
                       Numeric.Backprop.Mono
                       Numeric.Backprop.Iso
  other-modules:       Numeric.Backprop.Internal
                       Data.Type.Util
  build-depends:       base >= 4.7 && < 5
                     , ad
                     , generics-sop
                     , microlens
                     , microlens-mtl
                     , microlens-th
                     , mtl
                     , profunctors
                     , reflection
                     , tagged
                     , transformers-base
                     , type-combinators
  default-language:    Haskell2010
  ghc-options:         -Wall

executable backprop-monotest
  hs-source-dirs:      samples
  main-is:             MonoTest.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N -Wall -O2
  build-depends:       base
                     , backprop
  default-language:    Haskell2010

executable backprop-neuraltest
  hs-source-dirs:      samples
  main-is:             NeuralTest.lhs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N -Wall -O2
  build-depends:       base
                     , ad
                     , backprop
                     , generics-sop
                     , hmatrix
                     , mwc-random
                     , primitive
                     , singletons
                     , type-combinators
  default-language:    Haskell2010

